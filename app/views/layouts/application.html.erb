<!DOCTYPE html>
<html>
  <head>
    <title>Pi Movies</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Pi Movies</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li>
              <%= link_to play_pause_path, remote: true, id: "play-pause-button" do %>
                <i class="glyphicon glyphicon-pause"></i>
                Pause
              <% end %>
            </li>
            <li>
              <%= link_to stop_path, remote: true do %>
                <i class="glyphicon glyphicon-stop"></i>
                Stop
              <% end %>
            </li>
            <li>
              <%= link_to seek_path("left"), remote: true do %>
                <i class="inline-glyph glyphicon glyphicon-chevron-left"></i> Skip
              <% end %>
            </li>
            <li>
              <%= link_to seek_path("right"), remote: true do %>
                Skip <i class="inline-glyph glyphicon glyphicon-chevron-right"></i>
              <% end %>
            </li>
            <li>
              <%= link_to sound_toggle_path, remote: true, id: 'sound-button' do %>
                <i class="inline-glyph glyphicon glyphicon-volume-up"></i> Sound 
              <% end %>
            </li>
          </ul>
        </div><!--/.nav-collapse -->
      </div><!--/.container-fluid -->
    </nav>
    <%= yield %>
  </body>
</html>
